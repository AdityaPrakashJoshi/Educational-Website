    style.
      @import url('https://fonts.googleapis.com/css?family=Open+Sans&display=swap');
      body{
      margin: 0;
      padding: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background-color:  #d5f4e6;
      font-family: 'Poppins', sans-serif;
      }
      .container{
      width: 1000px;
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      }
      .box{
      position: relative ;
      display: flex;
      justify-content: center;
      text-align: center;
      width: 300px;
      height: 400px;
      background: #000000;
      box-shadow: 0 30px 40px rgba(0,0,0,0.5);
      }
      .box .imgA{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      }
      .box .imgA img{
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: 0.5s;
      }
      .box:hover .imgA img{
      opacity: 0;
      }
      .box .content{
      position: absolute;
      bottom: 20px;
      left: 10%;
      width: 80%;
      height: 60px;
      background-color: rgb(0, 0, 0);
      transition: 0.5s;
      overflow: hidden;
      padding: 15px;
      box-sizing: border-box;
      color: aliceblue;
      }
      .box:hover .content{
      width: 100%;
      height: 100%;
      bottom: 0;
      left: 0;
      }
      .box .content h3{
      margin: 10px;
      padding: 0;
      font-size: 20px;
      }
      .box .content p{
      margin: 10px 0 0;
      padding: 0;
      opacity: 0;
      line-height: 1.2em;
      font-size: 20px;
      transition: 0.5s;
      text-align: justify;
      }
      .box:hover .content p{
      opacity: 1;
      transition-delay: 0.5s;
      }
